<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <Resource name="jdbc/resource"
              auth="Container"
              type="javax.sql.DataSource"
              driverClassName="org.postgresql.Driver"
              url="jdbc:postgresql://${DB_HOST}:${DB_PORT}/${DB_NAME}"
              username="${DB_USER}"
              password="${DB_PASS}"
              maxTotal="20" />
</Context>
